<UserControl x:Class="DesktopContactApp.Controls.ContactsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContactApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300"
             x:Name="_this">
    
    <Grid>
        <StackPanel>
            <TextBlock Text="Name Lastname" 
                       x:Name="nameTextBlock"                                  
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock Text="example@domain.com" 
                       x:Name="emailTextBlock"
                       FontSize="15"
                       Foreground="DodgerBlue"/>
            <TextBlock Text="(123) 456 7890" 
                       x:Name="phoneTextBlock"
                       FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
